{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@idevelopthings/vue-class-stores": [
        "src/Lib/index.ts"
      ],
      "@idevelopthings/vue-class-stores/vue": [
        "src/Lib/index.ts"
      ],
      "@idevelopthings/vue-class-stores/dev-tools": [
        "src/DevTools/index.ts"
      ],
      "@idevelopthings/vue-class-stores/vite": [
        "src/VitePlugin/index.ts"
      ]
    }
  },
  "include": [
    "src/DevTools",
    "src/Lib",
    "src/VitePlugin"
  ],
  "exclude": [
    "node_modules"
  ]
}
