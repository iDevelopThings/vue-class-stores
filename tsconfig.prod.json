{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
