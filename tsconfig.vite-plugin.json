{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "./dist/VitePlugin",
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@idevelopthings/vue-class-stores/vue": [
        "src/Lib/index.ts"
      ],
      "@idevelopthings/vue-class-stores/dev-tools": [
        "src/DevTools/index.ts"
      ],
      "@idevelopthings/vue-class-stores/vite": [
        "src/VitePlugin/index.ts"
      ]
    }
  },
  "include": [
    "src/VitePlugin",
    "src/Common"
  ],
  "exclude": [
    "node_modules"
  ]
}
